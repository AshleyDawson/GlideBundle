{
  "name": "ashleydawson/glide-bundle",
  "type": "symfony-bundle",
  "description": "Glide image processing in a Symfony2 project",
  "license": "MIT",
  "keywords": [
    "glide",
    "image",
    "picture",
    "http",
    "processing",
    "thumbnail",
    "effects",
    "resize",
    "crop",
    "sepia",
    "black-and-white"
  ],
  "authors": [
    {
      "name": "Ashley Dawson",
      "email": "ashley@ashleydawson.co.uk"
    }
  ],
  "require": {
    "php": ">=5.4",
    "symfony/framework-bundle": "^3.0|^4.0",
    "league/flysystem": "^1.0",
    "league/glide-symfony": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "matthiasnoback/symfony-dependency-injection-test": "^1.0"
  },
  "autoload": {
    "psr-4": { "AshleyDawson\\GlideBundle\\": "src" }
  },
  "config": {
    "bin-dir": "bin"
  }
}
