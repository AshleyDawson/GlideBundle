{
  "name": "ashleydawson/glide-bundle",
  "type": "symfony-bundle",
  "description": "Glide image processing in a Symfony2 project",
  "license": "MIT",
  "keywords": [
    "glide",
    "image",
    "picture",
    "http",
    "processing",
    "thumbnail",
    "effects",
    "resize",
    "crop",
    "sepia",
    "black-and-white"
  ],
  "authors": [
    {
      "name": "Ashley Dawson",
      "email": "ashley@ashleydawson.co.uk"
    }
  ],
  "require": {
    "php": ">=7.2",
    "symfony/framework-bundle": "^4.4|^5.0|^6.0",
    "league/flysystem": "^2.0",
    "league/glide-symfony": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "matthiasnoback/symfony-dependency-injection-test": "^4.3"
  },
  "autoload": {
    "psr-4": { "AshleyDawson\\GlideBundle\\": "src" }
  },
  "autoload-dev": {
    "psr-4": { "AshleyDawson\\GlideBundle\\Tests\\": "tests" }
  },
  "config": {
    "bin-dir": "bin"
  }
}
